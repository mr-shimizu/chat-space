%body
  .side-bar
    .side-header
      .side-header__username
        = current_user.name
      %ul.side-header__icons
        %li.list
          = link_to new_group_path do
            %i.fa.fa-edit.side-header__icons--icon
        %li.list
          = link_to edit_user_path(current_user) do
            %i.fa.fa-cog.side-header__icons--icon

    .groups
      .group
